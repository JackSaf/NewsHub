<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NewsHub" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#fafafa</item>
        <item name="colorPrimaryVariant">#ffffff</item>
        <item name="colorOnPrimary">#c7c7c7</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#212121</item>
        <item name="colorSecondaryVariant">#000000</item>
        <item name="colorOnSecondary">#484848</item>
        <item name="android:textAppearance">@style/TextStyle</item>
    </style>
    <style name="roundedCornersImageView" parent="">
        <item name="cornerSize">20%</item>
    </style>
    <style name="TextStyle" parent="@android:style/TextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#131313</item>
    </style>

</resources>